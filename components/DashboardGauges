'use client';

import { useDashboardData } from '@/hooks/useDashboardData';
import { useState } from 'react';
import GaugeChart from '@/components/GaugeChart';

export default function DashboardGauges() {
  const { macroScore, technicalScore, setupScore, macroExplanation, technicalExplanation, setupExplanation, loading } = useDashboardData();
  const [selectedAsset, setSelectedAsset] = useState('BTC');

  return (
    <div className="space-y-6">

      {/* ✅ Asset selector en status */}
      <div className="flex flex-wrap gap-4 items-center justify-between">
        <div>
          <label htmlFor="assetSelect" className="font-semibold">🔁 Kies asset:</label>
          <select
            id="assetSelect"
            className="ml-2 p-2 border rounded"
            value={selectedAsset}
            onChange={(e) => setSelectedAsset(e.target.value)}
          >
            <option value="BTC">BTC</option>
            <option value="SOL">SOL</option>
          </select>
        </div>

        <div className="text-gray-500 text-sm">
          {loading ? '📡 Data laden...' : '✅ Data geladen'}
        </div>
      </div>

      {/* ✅ Meters + uitleg */}
      <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mt-4">

        {/* Macro Gauge */}
        <div className="p-4 border rounded shadow bg-white dark:bg-gray-800 space-y-4 text-center">
          <h3 className="font-bold">📉 Macro</h3>
          <GaugeChart label="Macro" score={macroScore} />
          <div className="text-sm text-gray-500">{macroExplanation || 'Uitleg laden...'}</div>
        </div>

        {/* Technical Gauge */}
        <div className="p-4 border rounded shadow bg-white dark:bg-gray-800 space-y-4 text-center">
          <h3 className="font-bold">📈 Technisch</h3>
          <GaugeChart label="Technisch" score={technicalScore} />
          <div className="text-sm text-gray-500">{technicalExplanation || 'Uitleg laden...'}</div>
        </div>

        {/* Setup Gauge */}
        <div className="p-4 border rounded shadow bg-white dark:bg-gray-800 space-y-4 text-center">
          <h3 className="font-bold">📊 Setup</h3>
          <GaugeChart label="Setup" score={setupScore} />
          <div className="text-sm text-gray-500">{setupExplanation || 'Uitleg laden...'}</div>
        </div>

      </div>
    </div>
  );
}
